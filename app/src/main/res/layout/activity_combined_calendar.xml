<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- 상단 캘린더: 집중 시간 기반 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/topCalendarCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 연도와 월 표시 -->
            <TextView
                android:id="@+id/topMonthYearTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp" />

            <!-- 이전 달 버튼 -->
            <Button
                android:id="@+id/topPrevMonthButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이전 달"
                app:layout_constraintTop_toBottomOf="@id/topMonthYearTextView"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp" />

            <!-- 다음 달 버튼 -->
            <Button
                android:id="@+id/topNextMonthButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="다음 달"
                app:layout_constraintTop_toBottomOf="@id/topMonthYearTextView"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp" />

            <!-- 캘린더 그리드 -->
            <GridLayout
                android:id="@+id/topCalendarGridLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="7"
                android:padding="8dp"
                app:layout_constraintTop_toBottomOf="@id/topPrevMonthButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- 하단 캘린더: 이모지 선택 기반 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/bottomCalendarCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/topCalendarCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 연도와 월 표시 -->
            <TextView
                android:id="@+id/bottomMonthYearTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp" />

            <!-- 이전 달 버튼 -->
            <Button
                android:id="@+id/bottomPrevMonthButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이전 달"
                app:layout_constraintTop_toBottomOf="@id/bottomMonthYearTextView"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp" />

            <!-- 다음 달 버튼 -->
            <Button
                android:id="@+id/bottomNextMonthButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="다음 달"
                app:layout_constraintTop_toBottomOf="@id/bottomMonthYearTextView"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp" />

            <!-- 캘린더 그리드 -->
            <GridLayout
                android:id="@+id/bottomCalendarGridLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="7"
                android:padding="8dp"
                app:layout_constraintTop_toBottomOf="@id/bottomPrevMonthButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- 하단 네비게이션 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/bottomCalendarCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/timerIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_timer" />

        <ImageView
            android:id="@+id/checkListIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_checklist" />

        <ImageView
            android:id="@+id/leaderBoardIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_leaderboard" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>